<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IncomeifyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.IncomeifyApp" parent="Base.Theme.IncomeifyApp" />

    <!-- TEXT STYLE -->
    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="android:textColor">@color/may_green</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="android:textColor">@color/may_green</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button -->
    <style name="CustomIconButton" parent="Widget.Material3.Button.Icon">
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="backgroundTint">@color/tea_green</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/may_green</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/may_green</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>